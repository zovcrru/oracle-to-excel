# Oracle Database Configuration (обязательные параметры)
# CONNECT_URI_PG = "postgresql://lice:passwd@upsql:5432/lice"
# CONNECT_URI_ORACLE="oracledb://pool3:passwd@oracle-scan:1521/crru"
# DB_CONNECT_URI = "postgresql://limo:passwd@gravi-vip:5433/crru"

# Oracle Database Configuration (обязательные параметры)
ORACLE_USER=POOL3
ORACLE_PASSWORD=your_password_here
ORACLE_DSN=oracle-scan:1521/crru

# Connection Pool Settings (опциональные)
POOL_MIN=1
POOL_MAX=5
POOL_INCREMENT=1
FETCH_ARRAY_SIZE=1000

# Application Settings
LOG_LEVEL=INFO
LOG_FILE=./logs/oracle_export.log
OUTPUT_DIR=./exports

# Excel Settings
COLUMN_WIDTH_SAMPLE_SIZE=1000
MAX_COLUMN_WIDTH=50
NULL_VALUE_REPLACEMENT=
WRAP_LONG_TEXT=true
MAX_ROWS_PER_SHEET=1000000

# Performance Settings
ENABLE_BATCH_PROCESSING=true
BATCH_SIZE=50000
SHOW_PROGRESS_BAR=true
PROGRESS_UPDATE_INTERVAL=100
